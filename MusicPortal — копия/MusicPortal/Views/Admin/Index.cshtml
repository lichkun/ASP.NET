@model AdminViewModel

<h2>Управление пользователями</h2>
<table class="table">
    <thead>
        <tr>
            <th>Имя пользователя</th>
            <th>Пароль</th>
            <th>Статус</th>
            <th>Подтверждение</th>
            <th>Удаление</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Login</td>
                <td>@user.Password</td>
                <td>@user.Status</td>
                <td>
                    @if (user.Status == 0)
                    {
                        <form asp-action="ChangeStatus" asp-route-userId="@user.Id" method="post">
                            <button type="submit" class="btn btn-primary">Подтвердить</button>
                        </form>
                    }
                </td>
                <td>
                    <form asp-action="DeleteUser" asp-route-userId="@user.Id" method="post">
                        <button type="submit" class="btn btn-primary">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<h2>Жанры</h2>
<form asp-controller="Admin" asp-action="AddGenre" method="post">
    <label>Название жанра:</label>
    <input type="text" name="genreName" required>
    <button type="submit" class="btn btn-success">Добавить жанр</button>
</form>
<table class="table">
<thead>
    <tr>
        <th>Название жанра</th>
        <th>Действия</th>
    </tr>
</thead>
<tbody>
    @foreach (var genre in Model.Genres)
    {
         <tr>
            <form asp-controller="Admin" asp-action="EditGenre" method="post">
                <td >
                    <input type="hidden" name="genreId" value="@genre.Id" />
                    <input type="text" value="@genre.Name" name="newName"/>
                </td>
                <td>
                    <button class="btn btn-warning" type="submit">Изменить</button>
                    <button type="submit" formaction="@Url.Action("DeleteGenre", "Admin", new { id = genre.Id })" class="btn btn-danger">Удалить</button>
                </td>
            </form>
        </tr>
    }
</tbody>
</table>


<h2>Исполнители</h2>
<form asp-controller="Admin" asp-action="AddArtist" method="post">
    <label>Имя исполнителя:</label>
    <input type="text" name="artistName" required>
    <button type="submit" class="btn btn-success">Добавить исполнителя</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Имя исполнителя</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var artist in Model.Artists)
        {
            <tr>
                <form asp-controller="Admin" asp-action="EditArtist" method="post">
                <td>
                    <input type="hidden" name="artistId" value="@artist.Id" />
                    <input type="text" value="@artist.Name" name="newName"/>
                </td>
                <td>
                    <button class="btn btn-warning" type="submit">Изменить</button>
                    <button type="submit" formaction="@Url.Action("DeleteArtist", "Admin", new { id = artist.Id })" class="btn btn-danger">Удалить</button>
                </td> 
                </form>
            </tr>

        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
}
