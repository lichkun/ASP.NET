@model UploadSongViewModel

<h2>@Localization.Resource.DownloadNewSong</h2>
<a asp-controller="User" asp-action="Index" class="btn btn-primary coal">@Localization.Resource.ReturnToDirectory</a>

<form asp-action="Upload" method="post" enctype="multipart/form-data" class="bw">
    <div class="form-group">
        <label>@Localization.Resource.SongTitle:</label>
        <input type="text" asp-for="SongTitle" required class="form-control bg-dark text-white" />
    </div>
    <div class="form-group">
        <label asp-for="SelectedArtistId">@Localization.Resource.ChooseArtist:</label>
        <select asp-for="SelectedArtistId" class="form-control bg-dark text-white" multiple aria-label="Multiple select example">
            <option value="">@Localization.Resource.ChooseArtist</option>
            @foreach (var artist in Model.Artists)
            {
                <option value="@artist.Id">@artist.Name</option>
            }
        </select>
        <span asp-validation-for="SelectedArtistId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SelectedGenreId">@Localization.Resource.ChooseGenre:</label>
        <select asp-for="SelectedGenreId" class="form-control bg-dark text-white" multiple aria-label="Multiple select example">
            <option value="">@Localization.Resource.ChooseGenre</option>
            @foreach (var genre in Model.Genres)
            {
                <option value="@genre.Id">@genre.Name</option>
            }
        </select>
        <span asp-validation-for="SelectedGenreId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>@Localization.Resource.ChooseFile:</label><br/>
        <input type="file" name="file" accept=".mp3" required class="form-control-file coal" />
    </div>
    <button type="submit" class="btn btn-primary coal">Загрузить</button>
</form>

