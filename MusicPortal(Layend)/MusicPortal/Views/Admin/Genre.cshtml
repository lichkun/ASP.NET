@using MusicPortal.BLL.DTO
@model List<GenreDTO>

<h2>Жанры</h2>
<form asp-controller="Admin" asp-action="AddGenre" method="post">
    <label>Название жанра:</label><br/>
    <input type="text" name="genreName" required>
    <button type="submit" class="btn btn-success">Добавить жанр</button>
</form>
<table class="table bw">
    <thead>
        <tr>
            <th>Название жанра</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model)
        {
            <tr>
                <form asp-controller="Admin" asp-action="EditGenre" method="post">
                <td>
                    <input type="hidden" name="genreId" value="@genre.Id" />
                    <input type="text" value="@genre.Name" name="newName" />
                </td>
                <td>
                    <button class="btn btn-warning" type="submit">Изменить</button>
                    <button type="submit" formaction="@Url.Action("DeleteGenre", "Admin", new { id = genre.Id })" class="btn btn-danger">Удалить</button>
                </td>
                </form>
            </tr>
        }
    </tbody>
    <a class="nav-link warn" href="@Url.Action("Index", "Admin")">Back</a>

</table>
