@model List<User>

<h2>Управление пользователями</h2>

<table class="table">
    <thead>
        <tr>
            <th>Имя пользователя</th>
            <th>Пароль</th>
            <th>Статус</th>
            <th>Подтверждение</th>
            <th>Удаление</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Login</td>
                <td>@user.Password</td>
                <td>@user.Status</td>
                <td>
                    @if (user.Status == 0)
                    {
                        <form asp-action="ChangeStatus" asp-route-userId="@user.Id" method="post">
                            <button type="submit" class="btn btn-primary">Подтвердить</button>
                        </form>
                    }
                </td>
                <td>
                    <form asp-action="DeleteUser" asp-route-userId="@user.Id" method="post">
                        <button type="submit" class="btn btn-primary">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <a class="nav-link" href="@Url.Action("Index", "Admin")">Back</a>

</table>
