@inject MultilingualSite.Services.ILangRead MyLangRead

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MultilingualSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MultilingualSite.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Club" asp-action="Index">@Resources.Resource.Back</a>
                <a class="navbar-brand" asp-controller="Club" asp-action="CreateClub">@Resources.Resource.CreateLink</a>
                <form asp-action="ChangeCulture" asp-controller="Club">
                    <select name="lang">
                        <option disabled selected>@Resources.Resource.ChooseLang</option>
                        @foreach (Language it in MyLangRead.languageList())
                        {
                            <option value=@it.ShortName>@it.Name</option>
                        }
                    </select>
                    <input type="submit" name="submit" value="@Resources.Resource.ChooseLang">
                </form>              
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; MultilingualSite -  @DateTime.Now - ASP.NET Core MVC Application
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
