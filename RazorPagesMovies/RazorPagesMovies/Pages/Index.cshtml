@page
@model IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<div style="padding-top:30px">
    <h3>Топ фильмов</h3>
    <table class="table">
        <tbody>
            @foreach (var movie in Model.Movies)
            {
                <tr>
                    <td>
                        <div class="movie-container">
                            <img src="@movie.Poster" alt="@movie.Title poster" />
                        </div>
                    </td>
                    <td>
                        <p class="movie-title">Место: @movie.Id</p>
                        <p class="movie-title">@movie.Title</p>
                        <p>@movie.Year</p>
                        <p>@movie.Director</p>
                        <p>@movie.Genres</p> 
                        <p class="movie-description">@movie.Description</p>
                        <a asp-page="Edit" asp-route-id="@movie.Id">Edit</a>
                        <a asp-page="Details" asp-route-id="@movie.Id">Details</a>
                        <a asp-page="Delete" asp-route-id="@movie.Id" class="delete-link" data-confirm="Are you sure you want to delete this movie?">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
